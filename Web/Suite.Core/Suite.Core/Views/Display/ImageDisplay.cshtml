@model Suite.Core.ViewModel.TComponentModelItem
<!-- Image Display-->

@{
    var imageInfoCollection = Model.RequestImages ();

    var width = Model.LayoutModel.Width + "px";
    var height = Model.LayoutModel.Height + "px";


    <div id="@Model.InfoModel.Id" class="carousel slide" data-ride="carousel" style="width:@width;height:@height;">
        <ol class="carousel-indicators">
            @{
                var className = "active";

                for (int j = 0; j < imageInfoCollection.Count; j++) {
                    <li data-target="#@Model.InfoModel.Id" data-slide-to="@j" class="@className"></li>

                    className = "";
                }
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @{
                className = "carousel-item active";

                foreach (var imageInfo in imageInfoCollection) {
                    <div class="@className">
                        @{
                            var imageWidth = imageInfo.Size.Width + "px";
                            var imageHeght = imageInfo.Size.Height + "px";

                            <img class="d-block w-100" src="@imageInfo.Path" />

                            <div class="carousel-caption d-none d-md-block" style="color:ActiveCaption">
                                <h3>@Html.Raw(imageInfo.Caption)</h3>
                                <h4>@Html.Raw(imageInfo.Description)</h4>
                            </div>
                        }
                    </div>

                    className = "carousel-item";
                }
            }
        </div>

        <!-- Left and right controls -->
        @*<a class="carousel-control-prev" href="#@Model.InfoModel.Id" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#@Model.InfoModel.Id" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>*@
    </div>

}