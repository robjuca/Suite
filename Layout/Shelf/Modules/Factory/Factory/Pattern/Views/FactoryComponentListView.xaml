<base:ViewChildBase x:Class="Module.Factory.Pattern.Views.TFactoryComponentListView"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:base="clr-namespace:rr.Library.Infrastructure;assembly=rr.Library.Infrastructure"
                    xmlns:dragdrop="urn:gong-wpf-dragdrop"
                    xmlns:controls="clr-namespace:Shared.Resources;assembly=Suite18.Shared.Resources"
                    xmlns:caliburn="http://www.caliburnproject.org"
                    DataContext="{x:Null}"
                    x:Name="ModuleFactoryComponentListViewModel">

    <UserControl.Resources>
        <!--Component-->
        <CollectionViewSource x:Key="ComponentCollectionViewSource"
                              Source="{Binding Model.ComponentSourceCollection}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Category" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Border Padding="2">
        <!--source bag-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--title-->
            <Border Grid.Row="0"
                    Padding="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0">
                        <ContentControl Style="{DynamicResource ContentBagIcon}" />
                    </Border>

                    <Border Grid.Column="1"
                            Margin="2 0 0 0">
                        <TextBlock VerticalAlignment="Center"
                                   Text="bag" />
                    </Border>

                    <Border Grid.Column="2"
                            Margin="0 0 2 0"
                            HorizontalAlignment="Right">
                        <TextBlock Text="{Binding Model.ComponentCount}" />
                    </Border>
                </Grid>
            </Border>

            <!--style, list-->
            <Border Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>

                    <!--style-->
                    <Border Grid.Column="0">
                        <controls:TStyleSelector x:Name="StyleSelector"
                                                 Layout="vertical"
                                                 SelectStyle="{Binding Model.StyleSelectorSelect}"
                                                 caliburn:Message.Attach="[Event StyleSelected] = [OnStyleSelected (StyleSelector.StyleName)]" />
                    </Border>

                    <!--list-->
                    <Border Grid.Column="1">
                        <materialDesign:Card  Padding="2"
                                              HorizontalAlignment="Stretch"
                                              VerticalAlignment="Stretch">
                            <ListView Tag="Bag"
                                      ItemsSource="{Binding Source={StaticResource ComponentCollectionViewSource}}"
                                      dragdrop:DragDrop.IsDragSource="True"
                                      dragdrop:DragDrop.IsDropTarget="True"
                                      dragdrop:DragDrop.DropHandler="{Binding DragDropHandler}"
                                      dragdrop:DragDrop.UseDefaultEffectDataTemplate="True"
                                      dragdrop:DragDrop.UseDefaultDragAdorner="True">

                                <ListView.ItemTemplate>
                                    <DataTemplate>
                                        <Border Width="120">
                                            <StackPanel Orientation="Horizontal">
                                                <ContentControl ContentTemplate="{Binding ChildIconTemplate}" />

                                                <TextBlock Margin="5 0 0 0"
                                                           VerticalAlignment="Center"
                                                           Text="{Binding Name}"
                                                           FontWeight="Bold"
                                                           TextWrapping="WrapWithOverflow" />
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ListView.ItemTemplate>

                                <ListView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel HorizontalAlignment="Left"
                                                   />
                                    </ItemsPanelTemplate>
                                </ListView.ItemsPanel>
                            </ListView>
                        </materialDesign:Card>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>

</base:ViewChildBase>
